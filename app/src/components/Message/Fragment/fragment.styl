/*
 * Import
 */


$raw-light = rgba(#fffdd8, .9)
$olms-background-light = lighten(#1e2124, 20%)
$olms-background = lighten(#1e2124, 10%)
$white-light = #FFF
$high-color = #abb2bf


/*
 * Classes
 */
.fragment
	&-value
		/*
		 * Emphasis
		 */
		&&--preformatted
			background: rgba($olms-background, .5)
			border: $olms-background
			border-radius: .2em
			color: $high-color
			margin: 0 .15em


		&&--preformatted
			display: block
			font-size: 1.5rem
			margin: .2em 0
			padding: .4em .8em
			overflow: auto


		&--link
			background-underline: $white-light, 90%
			jamb: $olms-background-light
			.course-chat-message--teacher &
				background-underline-color: $raw-light
